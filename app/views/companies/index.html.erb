   <!-- for devise  move to app layout -->
   <div class="homenav">
   <div class="offset">
   <div class="centerset">
     <div class="topset">
     <div class="logo">
         <%= link_to "SportFolio", root_path, id: "homelogo" %>
     </div>
     <div class="searchhold">
        <div class="inputsm">
          <div class="refSearch"><i class="fa fa-search"></i></div>
          <input type="text" id="inputTxt" placeholder="Search">
        </div>
     </div>
     <div class="signup">
             <% if user_signed_in? %>
             <%= link_to "Edit profile", edit_user_registration_path %> |
             <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
             <% else %>
             <i class="fab fa-facebook-f"></i>
              <i class="fas fa-user"></i><%= link_to "Sign up", new_user_registration_path  %> |
              <%= link_to "Login", new_user_session_path  %>
             <% end %>
     </div>


     </div> <!-- topset -->
     <div class="bottomset">

       <ul class="setlist">
         <li><%= link_to "COMPANIES", companies_path%></li>
         <li>NEWS</li>
         <li><%= link_to "LEADERBOARD", leaderboard_path%></li>
         <% if user_signed_in? %>
         <li><%= link_to "PROFILE", user_path(current_user)%></li>
         <li>GO PREMIUM</li>

         <% else %>
         <li><%= link_to "HOME", root_path %></li>
         <li>GO PREMIUM</li>

         <% end %>
       </ul>
     </div>
     </div>  <!-- centerset -->


   </div>


   </div>   <!-- homenav -->

<div class="compIndex">


<%= form_tag companies_path, :method => 'get', id: "companies_search" do %>

  <div class="csearch">
    <div class="csearchicon"><i class="fas fa-search"></i></div>
  <%= text_field_tag :search, params[:search], id: "isearch", placeholder: "Type keyword and press enter"  %>

 </div>
<% end %>




<div id="companies"><%= render "companies" %></div>

</div>
