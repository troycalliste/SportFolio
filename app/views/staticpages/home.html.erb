    <div class="marquee">
      <div class="slide">
        <span class="spanner">


    <span>
    <% Company.order('changepercent DESC').limit(20).each do |c| %>
      <span class="spn">
      <span>
    <%= c.ticker %>
    <%= content_tag(:div, "% #{c.changepercent * 100}", class: "change-price") %>
  </span>
</span>
    <% end %>


</span>
        </div>
    </div>
  </div>

