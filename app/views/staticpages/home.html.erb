<div class="lcontainer">
<div class="covcontainer">
<div class="newscontainer">
<%  News.all.limit(5).order("created_at DESC").each do |n| %>

<div class="newsbox">
  <%= image_tag "#{n.imageurl}", class: "nimg" %>
  <div class="extracont">
    <div class="extratitle">
    <%= n.title.titlecase %>
    </div>
    <div class="extrapub">
    <%= "Published on " + n.publishedon.strftime('%a, %d %b %Y') %>
    </div>
    <div class="extrabutton">
     Read More
    </div>

  </div>
</div> <!--newsbox-->
<br>
<% end %>
</div> <!--newscontainer-->


<div class="leadandonline">
<div class="minileaderboard">
  <table>

    <tr>
      <th>#</th>
      <th>Trader</th>
      <th>Points</th>
    </tr>
    <% User.order("totalprofit DESC").each do |u|  %>
    <tr>
      <td></td>
      <td><span class="i"><%= image_tag u.avatar.url(:thumb) %></span><%= u.name %></td>
      <td><%= u.totalprofit %></td></tr>
    <% end %>
  </table>
 </div>


 <div class="onlinenow">
    <div id="tradersnow">
      TRADERS ONLINE
  <div>
        <% User.order("totalprofit DESC").limit(5).each do |u| %>
          <%= u.id %>
           <% end %>
   </div>
 </div>
 </div> <!--onlinenow-->
</div> <!--lead and online-->
</div> <!--covcontainer-->

